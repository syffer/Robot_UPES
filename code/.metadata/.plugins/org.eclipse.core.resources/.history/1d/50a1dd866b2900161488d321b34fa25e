package model;

import java.awt.image.BufferedImage;

public class MatrixImageModel extends ImageModel {
	
	private int height;
	private int width;
	private int[][] data;
	
	public MatrixImageModel(ImageModel imageModel) {
		this(imageModel.getBufferedImage());
	}
	
	public MatrixImageModel(BufferedImage bufferedImage) {
		
		this.height = bufferedImage.getHeight();
		this.width = bufferedImage.getWidth();
		
		this.data = new int[this.height][this.width];
		
		for(int i = 0; i < this.height; i++) {
			for(int j = 0; j < this.width; j++) {
				this.data[i][j] = bufferedImage.getRGB(i, j);
			}
		}
		
	}
	
	@Override
	public BufferedImage getBufferedImage() {
		
		BufferedImage bufferedImage 
		
		return null;
	}

}
